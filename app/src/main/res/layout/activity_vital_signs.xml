<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDBEB0"
    tools:context=".VitalSigns">


    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:orientation="vertical"

        ></RelativeLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="121dp"
        android:layout_marginLeft="121dp"
        android:layout_marginTop="200dp"
        android:text="Heart Rate"

        />

    <EditText
        android:id="@+id/reading1"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="121dp"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="8dp"

        android:layout_toRightOf="@+id/textView5"
        android:hint="         " />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_marginStart="121dp"
        android:layout_marginLeft="121dp"
        android:layout_marginTop="12dp"

        android:layout_marginBottom="8dp"
        android:text="Cholestrol"

        />


    <EditText
        android:id="@+id/reading2"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="121dp"
        android:layout_marginTop="210dp"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@+id/textView6"
        android:hint="     "

        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_marginStart="121dp"
        android:layout_marginLeft="121dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="8dp"

        android:text="Glucose Level" />

    <EditText
        android:id="@+id/reading3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reading2"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="0dp"

        android:layout_toRightOf="@+id/textView7"
        android:hint="         " />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginStart="122dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="5dp"

        android:text="Blood Pressure"

        />

    <EditText
        android:id="@+id/reading4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reading3"
        android:layout_marginStart="220dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="15dp"

        android:hint="         "

        />

    <EditText
        android:id="@+id/reading4b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="313dp"
        android:layout_toRightOf="@+id/reading4"
        android:hint="         " />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Next"
        app:backgroundTint="#FF5722" />


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_vitalView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF5722"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />
    <TextView
        android:id="@+id/textView_vitalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="          Add Vital Signs"
        android:textColor="#FBFAFA"
        android:textSize="36sp" />

    <ImageView
        android:id="@+id/vitalBack"
        android:layout_width="53dp"
        android:layout_height="58dp"
        android:layout_marginEnd="358dp"
        android:layout_marginRight="358dp"
        android:layout_marginBottom="42dp"
        android:contentDescription="@string/backbutton"
        app:srcCompat="@drawable/abc_vector_test" />

</RelativeLayout>